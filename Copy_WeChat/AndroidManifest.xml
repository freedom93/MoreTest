<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.freedom.copy_wechat"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />
 	<uses-permission android:name="android.permission.VIBRATE" />
    <application
        android:icon="@drawable/icon"
        android:label="@string/title_activity_main">
        <activity
            android:name="com.freedom.copy_wechat.AppStart"
            android:label="@string/title_activity_main" 
            android:theme="@style/Anim_style2" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
            android:name="com.freedom.copy_wechat.WelcomeLogin"  
            android:theme="@style/Anim_style2"  
            android:configChanges="orientation|keyboardHidden|screenSize"/>
        <activity 
            android:name="com.freedom.copy_wechat.LoadingLogin"  
            android:theme="@android:style/Theme.NoTitleBar" 
 			android:configChanges="orientation|keyboardHidden|screenSize"/>
        <activity 
            android:name="com.freedom.copy_wechat.Welcomes"  
            android:theme="@android:style/Theme.NoTitleBar" 
 			android:configChanges="orientation|keyboardHidden|screenSize"/>
        <activity 
            android:name="com.freedom.copy_wechat.Register"  
            android:theme="@android:style/Theme.NoTitleBar" 
            android:configChanges="orientation|keyboardHidden|screenSize"/>
        <activity 
            android:name="com.freedom.copy_wechat.WelcomesDoorOpen" 
            android:theme="@style/Anim_style2" 
            android:configChanges="orientation|keyboardHidden|screenSize"/> 
        <activity 
            android:name="com.freedom.copy_wechat.WeChatMain" 
            android:theme="@style/Anim_style2" 
            android:configChanges="orientation|keyboardHidden|screenSize"/> 
      
    </application>

</manifest>
